@model IEnumerable<BuyNSellWebApp.Models.Type>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Product Type Operations</h1>
    <p>View All Product Type</p>
</div>
<p>
    <a asp-action="Create" class="btn btn-dark">Add New Product Type</a>
</p>
<table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                <th colspan="2">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.TypeID">Edit</a> </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TypeID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
