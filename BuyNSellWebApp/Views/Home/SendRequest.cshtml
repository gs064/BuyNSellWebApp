@model BuyNSellWebApp.Models.Request

@{
    ViewData["Title"] = "SendRequest";
}

<div class="text-center">
    <h1 class="display-4 font-weight-bold">Send Your Request</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="~/photos/@ViewData["ProductID"]@ViewData["ExtName"]" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">@ViewData["ProductName"]</h4>
                <h4 class="card-title">Price: $ @ViewData["Price"]</h4>
            </div>
        </div>
    </div>
    
        <div class="col-md-8">
            <form asp-action="SendRequest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ProductID" type="hidden" value='@ViewData["ProductID"]' />
                <input asp-for="Price" type="hidden" value='@ViewData["Price"]' />
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactNo" class="control-label"></label>
                    <input asp-for="ContactNo" class="form-control" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Send Request" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
