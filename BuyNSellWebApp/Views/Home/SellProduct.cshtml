@model BuyNSellWebApp.Models.Product

@{
    ViewData["Title"] = "SellProduct";
}

<div class="text-center">
    <h1 class="display-4  font-weight-bold">Sell Products</h1>
</div>
<p>
    <a asp-action="MyProducts" class="btn btn-dark">My Products</a>
</p>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="SellProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubTypeID" class="control-label"></label>
                <select asp-for="SubTypeID" class="form-control" asp-items="ViewBag.SubTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.FormFile" class="control-label"></label>
                <input asp-for="FileUpload.FormFile" type="file" class="form-control">
                <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save Product Details" class="btn btn-primary" />
            </div>
        </form>
        <div class="col-md-2"></div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
