@model IEnumerable<BuyNSellWebApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 font-weight-bold">List of Products</h1>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card w-100 shadow col-md-12">
                <center>
                    <img src="~/photos/@item.ProductID@item.ExtName" alt="" style="width:100%;height:200px">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.ProductName ($ @item.Price)
                    </h5>
                    <a class="btn btn-primary btn-block" asp-action="ViewDetails" asp-route-id="@item.ProductID">View Details</a>
                </div>

            </div>
        </div>
    }
</div>