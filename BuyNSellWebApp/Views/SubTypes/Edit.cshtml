@model BuyNSellWebApp.Models.SubType

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">Product Sub Type Operations</h1>
    <p>Edit Product Sub Type</p>
</div>
<p>
    <a asp-action="Index" class="btn btn-dark">All Product Sub Type</a>
</p>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubTypeID" />
            <div class="form-group">
                <label asp-for="SubTypeName" class="control-label"></label>
                <input asp-for="SubTypeName" class="form-control" />
                <span asp-validation-for="SubTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeID" class="control-label"></label>
                <select asp-for="TypeID" class="form-control" asp-items="ViewBag.TypeID"></select>
                <span asp-validation-for="TypeID" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
