@model IEnumerable<BuyNSellWebApp.Models.SubType>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Product Sub Type Operations</h1>
    <p>View All Product Sub Type</p>
</div>
<p>
    <a asp-action="Create" class="btn btn-dark">Add New Product Sub Type</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Types)
            </th>
            <th colspan="2">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Types.TypeName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.SubTypeID">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SubTypeID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
